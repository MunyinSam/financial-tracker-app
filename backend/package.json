{
  "name": "financial-tracker-backend",
  "version": "1.0.0",
  "description": "Financial Tracker Backend API",
  "main": "dist/index.js",

  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:migrate": "ts-node src/utils/run-migrations.ts",
    "db:reset": "ts-node src/utils/reset-database.ts",
    "db:seed": "ts-node src/utils/seed-database.ts"
  },

  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.23",
    "@types/pg": "^8.10.9",
    "@types/winston": "^2.4.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
